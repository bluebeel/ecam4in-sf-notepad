{% extends 'base.html.twig' %}
{% block title %}Notes{% endblock %}

{% block body %}
    <div class="container note-header">
        <div class="row">
            <div class="col-12 col-md-8">
                <h1>Notes list</h1>
            </div>
            <div class="col-6 col-md-4">
                <a href="{{ path('new_notes') }}" class="btn btn-primary btn-block note-btn" role="button">Add note</a>
            </div>
        </div>
    </div>
    {% for item in notes %}
    <div class="card card-outline-secondary my-4">
        <div class="card-header">
            {{ item.getTitle() }}
        </div>
        <div class="card-body">
            <h6 class="card-subtitle mb-2 text-muted">{{ item.getCategory().getLibelle() }}</h6>
            <p>{{ item.getContent()|striptags }}</p>
            <small class="text-muted">Posted on {{ item.getDate()|date('Y-m-d') }}</small>
            <hr>
            <a href="{{ path('edit_note', {'id': item.getId() }) }}" class="btn btn-primary">Edit note</a>
            <a href="{{ path('delete_note', {'id': item.getId() }) }}" class="btn btn-danger">Delete note</a>
        </div>
    </div>
        {% endfor %}
    <br/>
{% endblock %}